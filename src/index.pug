include data.pug

doctype html
html(lang="ja")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name="description", content="Daily Coding 2021 is a personal project of Takashi Tanaka")
		title Daily Coding 2021
		link(rel="stylesheet", href="./css/style.css")
		.
			<script src="https://cdn.jsdelivr.net/gh/google/code-prettify@master/loader/run_prettify.js"></script>
		include ./component/_googleAnalytics.pug
	body 
		h1.title#js_title= data.title
		ul.l_sketch-list
			each item in data.feb
				li(data-url= item.url, data-month= "02", data-id= item.id).l_sketch-list__item #{item.title}
			each item in data.mar
				li(data-url= item.url, data-month= "03", data-id= item.id).l_sketch-list__item #{item.title}
			each item in data.apr
				li(data-url= item.url, data-month= "04", data-id= item.id).l_sketch-list__item #{item.title}
			each item in data.may
				li(data-url= item.url, data-month= "04", data-id= item.id).l_sketch-list__item #{item.title}
			each item in data.june
				li(data-url= item.url, data-month= "04", data-id= item.id).l_sketch-list__item #{item.title}
			each item in data.july
				li(data-url= item.url, data-month= "04", data-id= item.id).l_sketch-list__item #{item.title}
		//- .c_code-icon ShowCode
		code.l_code.prettyprint#js_code
		iframe(class="c_i-frame" id="js_iframe" src="", frameborder="0")
